@page "/listado-usuarios"
@using Microsoft.AspNetCore.Identity
@inject ApplicationDbContext ac


<div class="tabla-registro" id="tablamodal">
    <a href="/menu"> <i class="fas fa-backspace"></i></a>
    <div class="contenido-tabla-registro">
        <h2>Usuarios registrados</h2>

        @foreach (var u in usuarios)
        {
            <table class="Tabla-Presentacion">
                <tr class="Tabla-Cabeza">
                    <td>Avatar</td>
                    <td>Cedula</td>
                    <td>Nombre</td>
                    <td>Apellido</td>
                    <td>Correo</td>
                    <td></td>
                </tr>
                <tr class="Tabla-Pie">
                    <td>
                        <img src="@u.Foto" width="50px" height="50px" style="object-fit: cover;" class="m-1">
                    </td>
                    <td>@u.Cedula</td>
                    <td>@u.Nombre</td>
                    <td>@u.Apellido</td>
                    <td>@u.Email</td>
                    <td>
                        <button @onclick="() => Borrar(u)" class="btn btn-danger">
                            <i class="far fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            </table>
        }

    </div>
</div>

