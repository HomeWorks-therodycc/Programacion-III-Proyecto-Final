@page "/Deudas"
@attribute [Authorize]


<img src="imgs/clients.png" class="Backgroundclientes" alt="">

<div class="contenido-tabla-registro" style="margin: 1cm;">
    <a href="/menu"> <i class="fas fa-arrow-left"></i></a>
    <h1 style="color: black;">Facturas / Deudas</h1>
    <table style="width:100%; height:auto;" class="Tabla-Monto_Debido">
        <thead>
            <tr class="Tabla-Cabeza">
                <th>Cedula</th>
                <th>Nombre</th>
                <th>Monto Debido</th>
            </tr>
        </thead>
        <tbody>

            @if(clientes == null){
                <Cargando></Cargando>
            }
            
            
            else{
            @foreach (Cliente c in clientes)
            {
                <tr class="Tabla-Pie">
                    
                    <td>@c.Cedula</td>
                    <td>@c.NombreCompleto</td>
                     <td>@c.Deuda</td> 
           
                    

                </tr>
            }

            }


            
        </tbody>
    </table>

</div>

@code{
private List<Cliente> clientes = null;

protected override async Task OnInitializedAsync(){
        clientes = await sc.Clientes.Include("Reservaciones").ToListAsync();
    }
}

