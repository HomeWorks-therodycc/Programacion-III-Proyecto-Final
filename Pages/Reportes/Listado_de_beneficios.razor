@page "/reporte2"
<br>
<br>
<h1 style="color:black;", FONT FACE="small fonts"><strong>Listado de Beneficios</strong></h1>
<img src="imgs/clientes.png" class="Backgroungclientes" alt="">
<div class="contenido-tabla-registro" style="margin: 1cm;">
    <a href="/listado-reportes"  class="boton-atras"><i class="fas fa-arrow-left"></i></a>
    <h1 style="color: black;">Datos Relevantes</h1>
    <table style="width: 100%; height:auto;" class="Tabla-Presentacion">
        <thead>
            <tr>
                <th colspan="3">Vehiculo</th>
                <th>Cantidad de reservaciones</th>
                <th>Beneficios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Vehiculo v in vehiculos)
            {
                <tr class="Tabla-Pie">
                    <td colspan="3">@v.Informacion</td>
                    <td>@v.Reservaciones.Count</td>
                    <td>@v.Beneficios.ToString("C0")</td>

                </tr>
            }
        </tbody>

    </table>

</div>


